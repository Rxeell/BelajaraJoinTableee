@model BelajaraJoinTable.Models.Siswa

@{
    ViewData["Title"] = "Create";
}

<h1>Siswa</h1>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nama" class="control-label"></label>
                <input asp-for="Nama" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JenisKelamin" class="control-label"></label>
                <input asp-for="JenisKelamin" class="form-control" />
                <span asp-validation-for="JenisKelamin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TanggalLahir" class="control-label"></label>
                <input asp-for="TanggalLahir" class="form-control" />
                <span asp-validation-for="TanggalLahir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinggiBadan" class="control-label"></label>
                <input asp-for="TinggiBadan" class="form-control" />
                <span asp-validation-for="TinggiBadan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomorHandphone" class="control-label"></label>
                <input asp-for="NomorHandphone" class="form-control" />
                <span asp-validation-for="NomorHandphone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alamat" class="control-label"></label>
                <input asp-for="Alamat" class="form-control" />
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GolonganDarah" class="control-label"></label>
                <input asp-for="GolonganDarah" class="form-control" />
                <span asp-validation-for="GolonganDarah" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hobi" class="control-label"></label>
                <input asp-for="Hobi" class="form-control" />
                <span asp-validation-for="Hobi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secendary">View All</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
